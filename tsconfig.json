{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "outDir": "./dist",
    "rootDir": "./src",       // Melhor: especificar a pasta dos arquivos .ts
    "strict": true,
    "esModuleInterop": true,  // Permite imports mais flexíveis
    "skipLibCheck": true      // Ignora verificações em bibliotecas externas
  },
  "include": ["src/**/*.ts"], // Compila apenas arquivos em /src
  "exclude": ["node_modules"] // Ignora dependências
}